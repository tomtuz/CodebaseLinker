{
  "name": "cotext",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "cotext": "./dist/cli.js"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "author": "tomtuz",
  "license": "ISC",
  "description": "A CLI tool to aggregate codebase files for context generation",
  "keywords": [
    "cli",
    "codebase",
    "context",
    "aggregator"
  ],
  "scripts": {
    "dev": "tsx src/index.ts -d -c .cotext/test.config.ts",
    "bin": "tsx run_binary.ts",
    "build": "unbuild",
    "build-run": "unbuild && npm run dev",
    "start": "node ./dist/cli.mjs",
    "prepare": "unbuild",
    "prepublishOnly": "npm run build",
    "pack": "npm pack --pack-gzip-level=9 --pack-destination='bin/prebuilt'",
    "debug_build": "node dist/index.mjs -d -c .cotext/test.config.ts",
    "debug_build_external": "npm node dist/index.mjs -d -c E:/Tomo/ccm/tool_ai_agent_go/.cotext/cotext.config.ts",
    "debug_tsx": "tsx src/index.ts -d -c .cotext/test.config.ts",
    "debug_tsx_external": "tsx src/index.ts -d -c E:/Tomo/ccm/tool_ai_agent_go/.cotext/cotext.config.ts",
    "build_bin": "go build -o bin/mybinary.exe main.go",
    "dev:init": "tsx src/index.ts init",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "fast-glob": "^3.3.2",
    "minimatch": "^10.0.1",
    "picocolors": "^1.0.1",
    "tsx": "4.16.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.12",
    "@vitest/ui": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  }
}
